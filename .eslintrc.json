{
  "root": true,
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "eslint-config-prettier", "prettier"],
  "env": {
    "es2021": true,
    "node": true
  },
  "plugins": [
    "prettier"
  ],
  "rules": {
    "no-unused-vars": 0,
    "no-constant-condition": 0,
    "prettier/prettier": [
      "warn",
      {
        "arrowParens": "always",
        "semi": false,
        "trailingComma": "none",
        "tabWidth": 2,
        "endOfLine": "auto",
        "useTabs": false,
        "singleQuote": true,
        "printWidth": 120,
        "jsxSingleQuote": true
      }
    ]
  }
}
